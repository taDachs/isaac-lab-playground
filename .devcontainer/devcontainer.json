{
  "name": "issac-lab-playground",
  "remoteUser": "root",
  "dockerComposeFile": "../docker/docker-compose.yaml",
  "service": "isaac-lab-template",
  "features": {
    "ghcr.io/tadachs/devcontainer-features/neovim:latest": {},
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages":  "stow,tmux,git"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": false,
    }
  },
  "environment": {
    "FOOBAR": "BAZ",
  },
  "workspaceFolder": "/workspace/foobarbaz",
  "postCreateCommand": {
    // "chown": "sudo chown -R tamer:tamer /workspace/"
    "chsh": "chsh -s /bin/zsh",
    "git-config": "git config --global --add safe.directory ${containerWorkspaceFolder}"
  }
}

